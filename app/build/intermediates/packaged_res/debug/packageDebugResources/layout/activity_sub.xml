<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_subtensp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm"
            android:textAlignment="center"
            android:textColor="#D14418"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_subgiasp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 12000000"
            android:textAlignment="center"
            android:textColor="#E42968"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/img_subitem"
            android:layout_width="match_parent"
            android:layout_height="408dp"
            app:srcCompat="@drawable/laptop" />

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFC107"
            android:drawableTint="#101010"
            android:text="Thêm vào giỏ hàng"
            app:iconTint="#121111"
            app:rippleColor="#FFC107" />

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Tiếp tục mua sắm"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>